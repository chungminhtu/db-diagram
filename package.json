{
  "name": "@krobkrong/db-diagram",
  "version": "0.1.1",
  "description": "Database diagram",
  "main": "dist/db-diagram.js",
  "types": "dist/types/index.d.ts",
  "author": "sreng.veasna@gmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/krobkrong/db-diagram.git"
  },
  "keywords": [
    "typescript",
    "svg",
    "database",
    "visualization",
    "sql",
    "diagram"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn build:browser:embed && yarn build:browser && yarn build:node",
    "build:browser:embed": "yarn build:dev --domain browser && yarn build:prod --domain browser",
    "build:browser": "(export NODE_ENV=production; yarn build:dev --domain browser && yarn build:prod --domain browser)",
    "build:node": "(export NODE_ENV=production; yarn build:dev --domain node && yarn build:prod --domain node)",
    "build:dev": "webpack --mode development --config webpack.config.build.ts",
    "build:prod": "webpack --mode production --config webpack.config.build.ts",
    "clean": "rm -rf ./dist/*",
    "tslint": "tslint --fix",
    "eslint": "eslint --fix",
    "serve": "webpack-dev-server --mode development --domain browser",
    "test:all": "yarn test --browsers=ChromeHeadless,FirefoxHeadless,Chrome,Firefox,Safari",
    "test:headless": "yarn test --browsers=ChromeHeadless,FirefoxHeadless",
    "test:ci": "yarn test --browsers=ChromeHeadlessNoSandbox,FirefoxHeadless",
    "test": "NODE_ENV=test karma start karma.config.ts",
    "release": "yarn publish --access public"
  },
  "devDependencies": {
    "@krobkrong/resources-utilities": "^0.1.16",
    "@types/chalk": "^2.2.0",
    "@types/istanbul-lib-source-maps": "^1.2.2",
    "@types/jasmine": "^3.4.4",
    "@types/karma": "^3.0.2",
    "@types/karma-coverage": "^1.1.1",
    "@types/karma-jasmine": "^0.0.31",
    "@types/karma-webpack": "^2.0.7",
    "@types/node": "^12.11.5",
    "@types/strip-ansi": "^5.2.1",
    "@types/terser-webpack-plugin": "^1.2.1",
    "@types/webpack": "4.39.5",
    "@types/webpack-dev-server": "3.4.0",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "chalk": "^2.4.2",
    "eslint": "^6.5.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "istanbul-lib-source-maps": "^3.0.6",
    "jasmine-core": "3.5.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.0.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "strip-ansi": "^5.2.0",
    "terser-webpack-plugin": "^2.2.1",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "typescript-tslint-plugin": "^0.5.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.9.0",
    "yargs": "^14.2.0"
  }
}
